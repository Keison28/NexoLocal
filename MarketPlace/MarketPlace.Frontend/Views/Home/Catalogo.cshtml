@model List<Marketplace.Domain.Entities.Producto>

@{
    ViewData["Title"] = "Catálogo de Productos";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center text-primary">Catálogo de Productos</h2>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var producto in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-lg border-0">
                    <div class="card-body">
                        <h5 class="card-title text-success">@producto.Nombre</h5>
                        <p class="card-text">Precio: <strong>$@producto.Precio</strong></p>
                        <p class="card-text">Stock disponible: @producto.Stock</p>
                    </div>
                    <div class="card-footer bg-white border-0">
                        <a href="/Ordenes/Crear" class="btn btn-outline-primary w-100">
                            <i class="bi bi-cart-plus me-1"></i> Ordenar este producto
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
