@model Marketplace.Domain.Entities.Orden

<h1>Eliminar Orden</h1>

<h3>¿Estás seguro que deseas eliminar esta orden?</h3>
<div>
    <h4>Orden</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Usuario</dt>
        <dd class="col-sm-10">@Model.Usuario?.Nombre</dd>

        <dt class="col-sm-2">Producto</dt>
        <dd class="col-sm-10">@Model.Producto?.Nombre</dd>

        <dt class="col-sm-2">Cantidad</dt>
        <dd class="col-sm-10">@Model.Cantidad</dd>

        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.Fecha.ToString("dd/MM/yyyy")</dd>
    </dl>
</div>

<form asp-action="Eliminar">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button> |
    <a asp-action="Index">Cancelar</a>
</form>
