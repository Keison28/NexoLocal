@model Marketplace.Domain.Entities.Pedido

@{
    ViewData["Title"] = "Crear Pedido";
}

<h2>Crear Pedido</h2>

<form asp-action="Crear">
    <div class="form-group">
        <label asp-for="Fecha"></label>
        <input asp-for="Fecha" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="Estado"></label>
        <input asp-for="Estado" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UsuarioId"></label>
        <input asp-for="UsuarioId" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
