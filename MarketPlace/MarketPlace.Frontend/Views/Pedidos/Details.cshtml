@model Pedido

<h2>Detalles del Pedido</h2>
<dl class="row">
    <dt class="col-sm-2">Fecha</dt>
    <dd class="col-sm-10">@Model.Fecha</dd>

    <dt class="col-sm-2">Estado</dt>
    <dd class="col-sm-10">@Model.Estado</dd>
</dl>

<h3>Productos:</h3>
<ul>
    @foreach (var detalle in Model.Detalles)
    {
        <li>@detalle.Producto.Nombre - Cantidad: @detalle.Cantidad - Precio: @detalle.PrecioUnitario</li>
    }
</ul>

<a asp-action="Index" class="btn btn-primary">Volver</a>
