@model List<Marketplace.Domain.Entities.Pedido>

@{
    ViewData["Title"] = "Pedidos";
}

<h2>Pedidos</h2>

<a class="btn btn-primary mb-3" asp-action="Crear">Crear Pedido</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Fecha</th>
            <th>Estado</th>
            <th>Usuario</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pedido in Model)
        {
            <tr>
                <td>@pedido.Id</td>
                <td>@pedido.Fecha.ToShortDateString()</td>
                <td>@pedido.Estado</td>
                <td>@pedido.UsuarioId</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Editar" asp-route-id="@pedido.Id">Editar</a>
                    <a class="btn btn-danger btn-sm" asp-action="Eliminar" asp-route-id="@pedido.Id"
                       onclick="return confirm('¿Estás seguro de que quieres eliminar este pedido?');">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
