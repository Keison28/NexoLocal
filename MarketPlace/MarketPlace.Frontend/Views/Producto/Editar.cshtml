@model Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<h1>Eliminar Producto</h1>

<div class="alert alert-danger">
    <p>¿Estás seguro de que deseas eliminar el producto <strong>@Model.Nombre</strong>?</p>
</div>

<form asp-action="EliminarConfirmado" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a href="@Url.Action("Index", "Productos")" class="btn btn-secondary">Cancelar</a>
</form>
