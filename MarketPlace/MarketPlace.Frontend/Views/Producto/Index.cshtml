@model IEnumerable<Producto>

@{
    ViewData["Title"] = "Productos";
}

<h1>Productos</h1>

<p>
    <a href="@Url.Action("Crear", "Productos")" class="btn btn-primary">Crear Producto</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.Id</td>
                <td>@producto.Nombre</td>
                <td>@producto.Precio</td>
                <td>
                    <a href="@Url.Action("Editar", "Productos", new { id = producto.Id })" class="btn btn-warning">Editar</a>
                    <a href="@Url.Action("Eliminar", "Productos", new { id = producto.Id })" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
