@model IEnumerable<Marketplace.Domain.Entities.Usuario>

<h2>Lista de Usuarios</h2>

<a class="btn btn-success mb-3" asp-action="Create">Crear Nuevo Usuario</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Dirección</th>
            <th>Teléfono</th>
            <th>Email</th>
            <th>Fecha de Registro</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.Nombre</td>
                <td>@usuario.Direccion</td>
                <td>@usuario.Telefono</td>
                <td>@usuario.Email</td>
                <td>@usuario.FechaRegistro.ToShortDateString()</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@usuario.Id">Ver</a>
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@usuario.Id">Editar</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@usuario.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>